<idea-plugin>
    <id>indi.nonoas.worktool.WorkTool-IDEA</id>
    <name>WorkTool</name>
    <vendor email="nonoas@sina.cn" url="https://www.nonoas.top">XBH</vendor>

    <idea-version since-build="210.0" until-build="213.*"/>

    <change-notes>
        <![CDATA[
            2023-06-07：添加导航书签功能，<code>shift+alt+D</code> 添加书签，<code>shift+alt+ ←/→</code> 切换书签
        ]]>
    </change-notes>

    <description>
        <![CDATA[
            一款用于方便工作的个人插件，用于加快工作效率，减少重复工作，希望能为各位开发者带了便利
        ]]>
    </description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="WorkTool" anchor="left"
                    icon="/icons/logo.svg"
                    factoryClass="indi.worktool.RootWindowFactory" secondary="false"/>

        <projectService serviceImplementation="indi.worktool.MyPersistent"/>
    </extensions>


    <!--插件动作-->
    <actions>

        <group id="org.intellij.sdk.action.GroupedActions" text="_Super Bookmark" popup="true">
            <add-to-group group-id="GoToMenu" anchor="after"
                          relative-to-action="indi.worktool.action.BookmarkCreateAction"/>

            <action id="indi.worktool.action.BookmarkCreateAction" class="indi.worktool.action.BookmarkCreateAction"
                    text="Add With Line">
                <keyboard-shortcut first-keystroke="shift alt d" keymap="$default"/>
            </action>
            <action id="indi.worktool.action.NextBookmarkAction" class="indi.worktool.action.NextBookmarkAction"
                    text="Next">
                <keyboard-shortcut first-keystroke="shift alt RIGHT" keymap="$default"/>
            </action>
            <action id="indi.worktool.action.PrevBookmarkAction" class="indi.worktool.action.PrevBookmarkAction"
                    text="Prev">
                <keyboard-shortcut first-keystroke="shift alt LEFT" keymap="$default"/>
            </action>

            <!-- 帮助菜单，跳转到插件官网 -->
            <action id="indi.worktool.action.ToHelpWebPageAction"
                    class="indi.worktool.action.ToHelpWebPageAction"
                    text="_Help"
                    icon="AllIcons.Actions.Help">
            </action>
        </group>

    </actions>

</idea-plugin>